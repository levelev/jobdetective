<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="card-white">
          <div class="card-white-category"><%= @company.city %>, <%=@company.country  %></div>
          <div class="card-white-description">
            <h2><%= @company.name %></h2>
            <p><%= @company.short_description %></p>
          </div>
          <%= image_tag @company.logo_url, class: "card-white-logo" %>
          <!-- <a class="card-white-link" href="#" ></a> -->
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-xs-12">
        <div class="card-white">
          <div class="card-white-category">Stack</div>
          <div class="card-white-description">
            <p>
              <ul class="list-inline">
              <% @company.tools.each do |tool| %>
                <li>
                  <%= tool.name %>
                </li>
              <% end %>
              </ul>


            </p>
          </div>
          <!-- <a class="card-white-link" href="#" ></a> -->
        </div>
      </div>
    </div>

