<div class="wrapper">
  <div class="container">

    <div class="row">
      <div class="col-xs-6 text-left">
        <%= link_to 'Â« Back to Search', companies_path %>
      </div>
    </div>
  </div>
</div>


<div class="board">
  <div class="board-column todo">
    <div class="board-column-header">To do</div>
    <div class="board-column-content" data-lead-status="pending">
      <% @leads.where(status: 'pending').each do |lead| %>
      <%= render "lead_card", lead: lead %>
      <% end %>
    </div>
  </div>
  <div class="board-column working">
    <div class="board-column-header">Working</div>
    <div class="board-column-content" data-lead-status="contacted">
      <% @leads.where(status: 'contacted').each do |lead| %>
      <%= render "lead_card", lead: lead %>
      <% end %>

    </div>
  </div>
  <div class="board-column done">
    <div class="board-column-header">Done</div>
    <div class="board-column-content" data-lead-status="accepted">
      <% @leads.where(status: 'accepted').each do |lead| %>
        <%= render "lead_card", lead: lead %>
      <% end %>
    </div>
  </div>

  <div class="board-column declined">
    <div class="board-column-header">Done</div>
    <div class="board-column-content" data-lead-status="declined">
      <% @leads.where(status: 'declined').each do |lead| %>
        <%= render "lead_card", lead: lead %>
      <% end %>
    </div>
  </div>
</div>
